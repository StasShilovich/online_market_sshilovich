<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="COMMENT_TABLE_1" author="stas.shilovich@gmail.com">
        <createTable tableName="T_COMMENT">
            <column autoIncrement="true" name="F_ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="F_DATE" type="DATE"/>
            <column name="F_CONTENT" type="VARCHAR(200)"/>
            <column name="F_ARTICLE_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="FK_ARTICLE_COMMENT" references="T_ARTICLE(F_ID)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>